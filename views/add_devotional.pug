extends layout

block content

    .container
        .row(style='margin-top:3%')
            .col.s6.push-s3.center
                h3 Crear Devocional
        .row
            .col.s12
                form
                    .row
                        .input-field.col.s12
                            input#titulo.validate(type='text')
                            label(for='titulo') Título
                    .row

                        .input-field.col.s12
                            textarea#textarea1.materialize-textarea(data-length='2500',name='textarea1')

                    .row
                        .input-field.col.s8
                          input#date.validate.datepicker(type='date')
                          label(for='date') Fecha de Publicación                            
                    .row
                        .file-field.input-field.col.s4
                          .btn
                            span Imagen
                            input(type='file')
                          .file-path-wrapper
                            input.file-path.validate(type='text')
                        .file-field.input-field.col.s4
                          .btn
                            span Audio
                            input(type='file')
                          .file-path-wrapper
                            input.file-path.validate(type='text')
                        .file-field.input-field.col.s4
                          .btn
                            span Video
                            input(type='file')
                          .file-path-wrapper
                            input.file-path.validate(type='text')
                    .row
                        button.btn.waves-effect.waves-light.teal(type='submit', name='action')
                          | Guardar
                          i.material-icons.right save

    include add_user_place_button

                    


    script(src='https://cdn.ckeditor.com/4.6.2/standard/ckeditor.js')
    script.

        $(document).ready(function() {
        CKEDITOR.replace( 'textarea1' );
        $('.datepicker').pickadate({
            selectMonths: true, // Creates a dropdown to control month
            selectYears: 15 // Creates a dropdown of 15 years to control year
              });
          });
        
